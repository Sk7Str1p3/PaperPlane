using Gtk 4.0;
using Adw 1;

template $PaplSidebarChatFolderRow {
  layout-manager: BinLayout {};

  Box {
    orientation: vertical;
    spacing: 3;

    $PaplSidebarChatFolderIcon icon {
      chat-list: bind template.chat-list;
    }

    Adw.Clamp {
      maximum-size: 80;
      tightening-threshold: 80;
      
    Label title_label {
      styles ["caption"]

        justify: center;
        wrap: true;
        wrap-mode: char;
      }
    }
  }
}
